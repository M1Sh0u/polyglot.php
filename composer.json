{
  "name": "m1sh0u/polyglot-php",
  "description": "Polyglot.php is a replica of the Airbnb's Polyglot.js I18n helper library",
  "keywords": [
    "polyglot",
    "i18n",
    "translate",
    "language"
  ],
  "homepage": "https://github.com/m1sh0u/polyglot.php",
  "license": "MIT",
  "authors": [
    {
      "name": "Mihai MATEI",
      "email": "mihai.matei@outlook.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0"
  },
  "autoload": {
    "psr-4": {
      "Polyglot\\": "src"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit tests",
    "test-win": "vendor\\bin\\phpunit tests"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
